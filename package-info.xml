<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Suki:Faq_Mod</id>
	<name>FAQ Mod</name>
	<version>1.2</version>
	<type>modification</type>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>hooks.php</code>
		<database>database.php</database>
		<modification>Faq.xml</modification>
		<require-file name="Faq.php" destination="$sourcedir">The file that handles everything</require-file>
		<require-file name="Faq.template.php" destination="$themedir">The file that shows the FAQs and handles the html stuff</require-file>
		<require-file name="Subs-Faq.php" destination="$sourcedir">The file that makes the queries to the database</require-file>
		<require-file name="Faq-Db.php" destination="$sourcedir">DB class</require-file>
		<require-dir name="languages" destination="$themedir">The folder with the translations</require-dir>
		<redirect url="$scripturl?action=admin;area=faqdmin" timeout="3000">redirect.txt</redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<code>remove.php</code>
		<database>database.php</database>
		<modification reverse="true">Faq.xml</modification>
		<remove-file name="$sourcedir/Faq.php" />
		<remove-file name="$sourcedir/Subs-Faq.php" />
		<remove-file name="$sourcedir/Faq-Db.php" />
		<remove-file name="$themedir/Faq.template.php" />
		<remove-file name="$languagedir/Faq.english.php" />
<!-- 		<remove-file name="$languagedir/Faq.english-utf8.php" />
		<remove-file name="$languagedir/Faq.english-utf8.php" />
		<remove-file name="$languagedir/Faq.spanish_latin-utf8.php" />
		<remove-file name="$languagedir/Faq.spanish_es.php" />
		<remove-file name="$languagedir/Faq.spanish_es-utf8.php" /> -->
	</uninstall>

</package-info>